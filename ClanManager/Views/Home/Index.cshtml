@model Character
@using ClanManager.Models
@{
    ViewBag.Title = "index";
}

@using (Html.BeginForm())
{

<div class="container-top">
    <div class="title-text">
        <h1>Search a clan</h1>
        <hr class="style11" />
        @Html.TextBoxFor(u => u.Name, new { @class = "search", placeholder = "Enter clanname here", maxlength = "24" })
        @Html.ValidationMessageFor(u => u.Name)
        <hr class="style11" />

    </div>
</div>
    <div class="container">
        <h2>What is BNSClans?</h2>
        <hr />
        <p>BNSClans is a site made to help players organize their clans. We read of your stats, gear, class and more to determine optimal raid groups, an overview of your members and much more.</p>
    </div>

}