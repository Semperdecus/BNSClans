@model Character
@using ClanManager.Models
@{
    ViewBag.Title = "index";
}

<div class="container-splash inside-border">
@using (Html.BeginForm())
{
    <div class="title-text">
        <h1>Search a clan</h1>
        <hr class="style11" />
        @Html.TextBoxFor(u => u.Name, new { @class = "search", placeholder = "Enter clanname here", maxlength = "24" })
        @Html.ValidationMessageFor(u => u.Name)
        <input type="submit" class="arrow2" value="" />
        <hr class="style11" />
    </div>
    <div class="title-text-sub arrow"><a href="~/Clans/"><span class="h6">Show all clans</span></a></div>
}
